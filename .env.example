# App
PORT=3000
NODE_ENV=development

# Mongo (docker-compose defaults match these)
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB_NAME=chronos
MONGO_ROOT_USER=chronos
MONGO_ROOT_PASSWORD=chronos_password
# If you prefer a single string, set MONGO_URI and ignore the vars above:
# MONGO_URI=mongodb://chronos:chronos_password@localhost:27017/chronos?authSource=admin

# Redis (docker-compose defaults match these)
REDIS_HOST=localhost
REDIS_PORT=6379
# If you prefer a single string, set REDIS_URL and ignore the vars above:
# REDIS_URL=redis://localhost:6379

# Request logging (MongoDB)
REQUEST_LOGGING_ENABLED=true
REQUEST_LOGGING_INCLUDE_QUERY=true

# Stats page
STATS_ENABLE_COLLECTION_COUNTS=true
STATS_MAX_COLLECTIONS=25
STATS_CACHE_TTL_MS=10000
STATS_LATENCY_SAMPLES=500
STATS_SHOW_JEST_COVERAGE=true
# Default: coverage/coverage-summary.json
# STATS_JEST_COVERAGE_SUMMARY_PATH=coverage/coverage-summary.json
STATS_SERVE_JEST_COVERAGE_REPORT=true
# Default: coverage/lcov-report (served at /_coverage/ in dev)
# STATS_JEST_COVERAGE_REPORT_DIR=coverage/lcov-report
STATS_EMBED_JEST_COVERAGE_REPORT=false
